clear
close all

N = 40;
erange = 0.1:0.1:6;
reps = 10;
yy = 0;

for neighbour = 1:1:40
    for e = erange
        yy = yy+1;
        steady_a(neighbour,yy) = 0;
        for r = 1:1:reps
        
            [x,y,T,op] = polarization(J,N,e,L,movie,k,cf);
            sizeop = length(op);
            ssalign = mean(op(round(sizeop/2):end));
            steady_a(neighbour,yy) = steady_a(neighbour,yy) + ssalign;
        end
        steady_a(neighbour,yy) = steady_a(neighbour,)/reps;
    end
end


save('ssatry1.mat')

        