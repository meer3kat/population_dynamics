clear

load('Q3_3network')

%degree_nw the degree of the connect
max_degree = max(degree_nw);
h = 0;
ii = 0;
hr(1) = 1;


while h < 100
    i = i + 1;
    h = 2^i;
    hr = [hrange h]; %for our histogram
end



histu = hist(degree_nw,hrange);
bar(histu);
loglog(histu);

figure2 = figure('position', [0, 0, 700, 500]);
plot(y)
xlabel('Time','FontSize',14)
ylabel('Number of infected individuals','FontSize',14)
title({'Numer of infected individuals over time';'p = 0.01'}, 'FontSize', 16)
%saveas(figure2,'infectp001.png');

